<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/blury_background"
    android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvappname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h3"
            android:layout_marginTop="120dp"
            android:drawableStart="@drawable/ic_kleine_shape"
            android:drawablePadding="6dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Kleine."></TextView>

        <TextView
            android:id="@+id/tvlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h4"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvappname"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            android:text="@string/letslogin"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/donothavehaveaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h2"
            app:layout_constraintTop_toBottomOf="@+id/tvlogin"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            android:text="Dont't have an account? Register"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/edtemail"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittextHeight"
            android:hint="Email"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            app:layout_constraintEnd_toEndOf="@id/rightguideline"
            app:layout_constraintTop_toBottomOf="@+id/donothavehaveaccount"
            android:layout_marginTop="50dp"
            style="@style/editText"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittextHeight"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            app:layout_constraintEnd_toEndOf="@id/rightguideline"
            app:layout_constraintTop_toBottomOf="@+id/edtemail"
            android:layout_marginTop="15dp"
            style="@style/editText"
            android:inputType="numberPassword"/>
        <TextView
            android:id="@+id/forgatepaasword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgate Password"
            app:layout_constraintTop_toBottomOf="@+id/edtpassword"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            style="@style/h2"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"/>
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/buttonlogin"
            android:layout_width="0dp"
            android:layout_height="@dimen/mediumButtonHeight"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/forgatepaasword"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            app:layout_constraintEnd_toEndOf="@id/rightguideline"
            android:text="Login"
            android:layout_marginTop="15dp"
            app:spinning_bar_color="@color/white"/>
        <ImageView
            android:id="@+id/facebooklogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook_login"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="@id/leftguideline"
            app:layout_constraintTop_toBottomOf="@+id/buttonlogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                app:layout_constraintStart_toStartOf="@+id/facebooklogin"
                app:layout_constraintTop_toTopOf="@+id/facebooklogin"
                app:layout_constraintBottom_toBottomOf="@id/facebooklogin"
                app:layout_constraintEnd_toEndOf="@id/facebooklogin"/>
        <ImageView
            android:id="@+id/emaillogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_login"
            android:layout_marginTop="13dp"
         app:layout_constraintEnd_toEndOf="@id/rightguideline"
            app:layout_constraintTop_toBottomOf="@+id/buttonlogin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google"
            app:layout_constraintStart_toStartOf="@+id/emaillogin"
            app:layout_constraintTop_toTopOf="@+id/emaillogin"
            app:layout_constraintBottom_toBottomOf="@id/emaillogin"
            app:layout_constraintEnd_toEndOf="@id/emaillogin"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.09" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>